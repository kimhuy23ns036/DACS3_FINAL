            android:exported="false"
            android:name="com.example.ticketbookingapp.Activities.Admin.AdminUserManagementActivity" />
        <activity
            android:exported="false"
            android:name="com.example.ticketbookingapp.Activities.Admin.AdminBookingManagementActivity" />
        <activity
            android:exported="false"
            android:name="com.example.ticketbookingapp.Activities.Admin.AdminFlightManagementActivity" />
        <activity
            android:exported="false"
            android:name="com.example.ticketbookingapp.Activities.Admin.AdminDashboardActivity" />
        <activity
            android:exported="false"
            android:name="com.example.ticketbookingapp.Activities.BookingHistory.BookingHistoryActivity" />
        <activity
            android:exported="false"
            android:name="com.example.ticketbookingapp.Activities.Profile.ProfileActivity" />
        <activity
            android:exported="false"
