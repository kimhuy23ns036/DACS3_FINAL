            android:name="com.example.ticketbookingapp.Activities.SeatSelect.SeatSelectActivity" />
        <activity
            android:exported="false"
            android:name="com.example.ticketbookingapp.Activities.SearchResult.SearchResultActivity" />
        <activity
            android:exported="false"
            android:name="com.example.ticketbookingapp.Activities.Dashboard.DashboardActivity" />
        <activity
            android:exported="true"
            android:name="com.example.ticketbookingapp.Activities.Splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

